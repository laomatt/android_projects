* Description:  This program Cycles through my portfolio images in the
* drawable folder in a slideshow and
* displays them on screen by pressing a next button and a previous button.
 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SlideShow">

    <!--This is the title of my slide show at the top-->
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"

    >
    <TextView
        android:text="@string/title"
        android:textColor="#ffff0c0b"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        />
    </RelativeLayout>

    <!--my image window-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >



        <ImageView
            android:id="@+id/pictureWindow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="120dp"
            />
        </RelativeLayout>

<!--these are my buttons-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/PrevButton"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:onClick="button"
            android:text="@string/pbutton"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/NextButton"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:onClick="button"
            android:text="@string/nbutton"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


</RelativeLayout>
