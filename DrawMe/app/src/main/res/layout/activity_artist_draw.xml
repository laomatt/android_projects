<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mattlao.drawme.artist_draw">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="700px"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="@dimen/padd"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle"
            android:gravity="center"
            android:text="Artist"

            />


        <TextView
            android:layout_width="450px"
            android:layout_height="120px"
            android:text="name"
            android:gravity="center"
            android:textSize="@dimen/regtext"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:text="FROM FILES"
            android:textSize="@dimen/regtext"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:text="RANDOM PICS"
            android:textSize="@dimen/regtext"
            />









        <RadioGroup
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="1.  Select pictures from the right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="2.  Select length of poses below:"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 min poses"
                android:textSize="@dimen/regtext"
                android:gravity="center"

                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 min poses"
                android:gravity="center"
                android:textSize="@dimen/regtext"

                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 min poses"
                android:gravity="center"
                android:textSize="@dimen/regtext"

                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 min poses"
                android:gravity="center"
                android:textSize="@dimen/regtext"

                />




        </RadioGroup>


        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="DRAW!"
            android:textSize="@dimen/regtext"
            />
    </LinearLayout>


        <GridView
            android:id="@+id/pictures"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:columnWidth="@dimen/thumnail"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:padding="@dimen/padd"
            android:horizontalSpacing="10dp"
            android:gravity="top"

            >




            </GridView>
    </LinearLayout>
</RelativeLayout>
