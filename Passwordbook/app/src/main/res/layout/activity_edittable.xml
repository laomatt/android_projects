<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mattlao.passwordbook.Edittable">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">

            <Button
                android:id="@+id/cleartable"
                android:onClick="press"
                android:text="Delete table"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/deleteentry"
                android:onClick="press"
                android:text="Delete entry"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/backmenu"
                android:onClick="press"
                android:text="Back"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:orientation="vertical"
        android:padding="20dp"
        >





        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="match_parent"
                android:gravity="left"
                android:textSize="@dimen/textsize"
                android:text="WEBSITE NAME           PASSWORD"
                android:layout_height="40dp" />

            <LinearLayout
                android:id="@+id/headerrow"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/updatename"
                    android:layout_width="250dp"
                    android:textSize="@dimen/textsize"
                    android:gravity="center"
                    android:layout_height="match_parent" />

                <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/updatepw"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/textsize"
                    android:gravity="center"
                    android:layout_height="match_parent" />



            </LinearLayout>

            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:onClick="press"
                android:text="Enter"
                android:gravity="center"
                android:layout_height="70dp" />



            <ListView
                android:id="@+id/pwtable"
                android:layout_width="match_parent"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:layout_height="match_parent">






            </ListView>





        </LinearLayout>







    </LinearLayout>







    </LinearLayout>

</RelativeLayout>
